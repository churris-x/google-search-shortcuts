{
    "manifest_version": 3,
    "minimum_chrome_version": "88",
    "name": "Google Search Keyboard Shortcuts",
    "description": "Adds keyboard shortcuts/hotkeys back to Google search results",
    "version": "2.1.1",
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "author": "Valentin Guillet <guillet.valentin95240@gmail.com",
    "homepage_url": "https://github.com/Valentin-Guillet/google-search-shortcuts",
    "options_ui": {
        "page": "options.html"
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "permissions": ["notifications", "storage"],
    "content_scripts": [
        {
            "matches": ["https://www.google.com/*"],
            "js": ["js/utils.js", "js/shortcuts.js"],
            "css": ["css/highlight.css"]
        }
    ]
}
